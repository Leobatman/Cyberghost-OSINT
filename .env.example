# =============================================================================
# CYBERGHOST OSINT ULTIMATE - Environment Configuration
# =============================================================================

# Application Settings
CYBERGHOST_HOME=${HOME}/cyberghost-osint
CYBERGHOST_MODE=production
CYBERGHOST_VERSION=7.0.0
CYBERGHOST_CODENAME="Shadow Warrior"

# Paths
CONFIG_DIR=${HOME}/.cyberghost
DATA_DIR=${CYBERGHOST_HOME}/data
LOG_DIR=${CYBERGHOST_HOME}/logs
TEMP_DIR=/tmp/cyberghost
REPORTS_DIR=${HOME}/CyberGhost_Reports
WORDLISTS_DIR=${DATA_DIR}/wordlists
DATABASES_DIR=${DATA_DIR}/databases

# Database Configuration
DB_TYPE=sqlite
DB_PATH=${CONFIG_DIR}/cyberghost.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cyberghost
DB_USER=cyberghost
DB_PASS=cyberghost123

# Redis Configuration (for queue/cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Network Settings
HTTP_TIMEOUT=30
MAX_RETRIES=3
PARALLEL_JOBS=10
RATE_LIMIT=100
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
PROXY=
USE_TOR=false
TOR_PORT=9050
TOR_CONTROL_PORT=9051

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100M
LOG_MAX_FILES=10
LOG_COMPRESS=true
AUDIT_LOGGING=true

# Reports
REPORT_FORMAT=html
REPORT_TEMPLATE=modern
REPORT_COMPRESS=true
REPORT_ENCRYPT=false
REPORT_PASSWORD=

# Security
ENCRYPT_CONFIG=false
ENCRYPT_KEY=
AUDIT_LOGGING=true
MAX_SCAN_DURATION=86400
RATE_LIMIT_ENABLED=true

# Scan Settings
SCAN_TIMEOUT=3600
SCAN_DEPTH=full
SCAN_THREADS=50
SCAN_DELAY=0.1
FOLLOW_REDIRECTS=true
VERIFY_SSL=false
COLLECT_METADATA=true
DETECT_HONEYPOTS=true

# Features
ENABLE_AI_ANALYSIS=true
ENABLE_MACHINE_LEARNING=false
ENABLE_DARKWEB=false
ENABLE_BLOCKCHAIN=false
ENABLE_IOT_SCANNING=false
ENABLE_CLOUD_DETECTION=true
ENABLE_CDN_DETECTION=true
ENABLE_WAF_DETECTION=true

# Notifications
NOTIFY_EMAIL=
NOTIFY_SLACK_WEBHOOK=
NOTIFY_DISCORD_WEBHOOK=
NOTIFY_TELEGRAM_BOT=
NOTIFY_TELEGRAM_CHAT=
NOTIFY_ON_COMPLETE=true
NOTIFY_ON_ERROR=true

# Performance
CACHE_ENABLED=true
CACHE_DIR=${CONFIG_DIR}/cache
CACHE_MAX_SIZE=1G
CACHE_TTL=86400
MEMORY_LIMIT=512M
CPU_LIMIT=80

# API Rate Limiting
API_RETRY_DELAY=5
API_CACHE_TTL=3600
API_RATE_LIMIT_ENABLED=true
API_CONCURRENT_REQUESTS=5

# Wordlist Paths
WORDLIST_SUBDOMAINS=${WORDLISTS_DIR}/subdomains/all.txt
WORDLIST_DIRECTORIES=${WORDLISTS_DIR}/directories/common.txt
WORDLIST_PASSWORDS=${WORDLISTS_DIR}/passwords/rockyou.txt
WORDLIST_USERNAMES=${WORDLISTS_DIR}/usernames/common.txt

# Tool Paths
TOOLS_DIR=${CYBERGHOST_HOME}/tools
GO_BIN=${HOME}/go/bin
PYTHON_VENV=${CYBERGHOST_HOME}/venv

# Docker Settings
DOCKER_NETWORK=cyberghost_net
DOCKER_COMPOSE_FILE=docker/docker-compose.yml

# Kubernetes (if using)
K8S_NAMESPACE=cyberghost
K8S_CONFIG_FILE=kubeconfig

# Development
DEBUG=false
VERBOSE=false
QUIET=false
NO_COLOR=false
DEV_MODE=false

